{% extends "parent.njk" %}
{% block head %}
{% endblock %}
{% block page_name %}Adjustment Timestamps{% endblock %}

{% block body %}
<div class="content-section">
    <form method="POST" action="">
        <input type="hidden" name="_csrf" value={{ crsfToken }} />
        <fieldset class="form-group">
            <legend>Select the Date you want to adjust:</legend>
            <div class="form-group">
                {{ form.range_begin.label("form-control-label") | safe}}
                {{ form.range_begin.field("form-control form-control-lg") | safe}}
            </div>
        </fieldset>
        <div class="form-group">
            {{ form.submit.field("btn btn-outline-info") | safe}}
            <a class="btn btn-outline-info" href="{{domain}}/adjust" id="cancel">Cancel</a>
        </div>
    </form>
</div>
<p>
    <a href="{{domain}}/clock">Back to Main Menu</a>
</p>
{% endblock body %}