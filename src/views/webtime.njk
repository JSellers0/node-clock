{% extends "parent.njk" %}
{% block head %}
{% endblock %}
{% block page_name %}Node Express Time Clock{% endblock %}

{% block body %}
<div class="content-section">
    {% if isAuth %}
    <div>
        {% if "Click" in message %}
            <h1 id="message">{{ message }}</h1>
        
        {% endif %}
    </div><br/>
    <div id="controlpanel" class="form-group">
        <a class="btn btn-outline-info" href={{ domain + "/start" }} id="start">Start</a>
        <a class="btn btn-outline-info" href={{ domain + "/stop" }} id="stop">Stop</a>
        <a class="btn btn-outline-info" href={{ domain + "/adjust" }} id="adjust">Adjust</a>
        <a class="btn btn-outline-info" href={{ domain + "/report" }} id="report">Report</a>
    </div>
    {% else %}
    <div id="media content-section">
        <h1><a href={{ domain + "/users/register" }}>Register</a> or 
            <a href={{ domain + "/users/login" }}>Login</a> to use TimeClock</h1>
    </div>
    {% endif %}
</div>
{% endblock body %}