{% extends "parent.njk" %}
{% block head %}
{% endblock %}
{% block page_name %}Register for TimeClock Account{% endblock %}

{% block body %}
<div class="content-section">
    <form method="POST" action="">
        <input type="hidden" name="_csrf" value={{ crsfToken }} />
        <fieldset class="form-group">
            <legend>Login To Access Additional Site Features!</legend>
            <div class="form-group">
                <label class="form-control-label" for="user_name">Username</label>
                <input class="form-control form-control-lg" id="user_name" maxlength="40" name="user_name" 
                required="" type="text" value="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" 
                autocomplete="off" />
            </div>
            <div class="form-group">
                <label class="form-control-label" for="password">Password</label>
                <input class="form-control form-control-lg" id="password" name="user_name" 
                required="" type="password" value="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" 
                autocomplete="off" />
            </div>
            <div class="form-check">
                <input class="form-check-input" id="remember" name="remember" type="checkbox" value="y">
                <label class="form-check-label" for="remember">Remember Me</label>
            </div>
        </fieldset>
        <div class="form-group">
            <input class="btn btn-outline-info" id="submit" name="submit" type="submit" value="Login">
        </div>
        <small class="text-muted ml-2">
            <a href="#">Forgot Password?</a>
        </small>
    </form>
</div>
<div class="border-top pt-3">
    <small class="text-muted">
    </small>
</div>
{% endblock body %}