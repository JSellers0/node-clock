{% extends "parent.njk" %}
{% block head %}
{% endblock %}
{% block page_name %}Register for TimeClock Account{% endblock %}

{% block body %}

<div class="content-section">
    <form method="POST" action="">
        <input type="hidden" name="_csrf" value={{ crsfToken }} />
        <fieldset class="form-group">
            <legend>Register to Access Additional Site Features!</legend>
            <div class="form-group">
                <label class="form-control-label" for="user_name">Username</label>
                <input class="form-control form-control-lg" id="user_name" maxlength="40" name="user_name" 
                required="" type="text" value="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" 
                autocomplete="off" />
            </div>
            <div class="form-group">
                <label class="form-control-label" for="email">Email</label>
                <input class="form-control form-control-lg" id="email" maxlength="40" name="email" 
                required="" type="text" value="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" 
                autocomplete="off" />
            </div>
            <div class="form-group">
                <label class="form-control-label" for="timezone">Local Timezone</label>
                <select class="form-control form-control-lg" id="timezone" name="timezone" required="">
                    <option value="US/Eastern">US/Eastern</option>
                    <option value="US/Central">US/Central</option>
                    <option value="US/Pacific">US/Pacific</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-control-label" for="password">Password</label>
                <input class="form-control form-control-lg" id="password" name="password" 
                required="" type="password" value="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" 
                autocomplete="off" />
            </div>
            <div class="form-group">
                <label class="form-control-label" for="confirm_password">Confirm Password</label>
                <input class="form-control form-control-lg" id="confirm_password" name="confirm_password" 
                required="" type="password" value="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" 
                autocomplete="off" />
            </div>
        </fieldset>
         <div class="form-group">
            <input class="btn btn-outline-info" id="submit" name="submit" type="submit" value="Login">
        </div>
    </form>
</div>
<div class="border-top pt-3">
    <small class="text-muted">
        Already Have An Account? <a href={{ domain + "users/login"}}>Log In</a>
    </small>
</div>
{% endblock body %}